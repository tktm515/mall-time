<%= form_with model: @tenant, url: new_tenant_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "tenants/shared/error_messages", resource: resource %>
    <h2>【新規テナント登録】</h2>
    <div class="img-upload">
      <div class="weight-bold-text">
        店舗画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>

    <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">店舗名</label>
          <span class="indispensable">※必須</span>
        </div>
        <%= f.text_field :tenant_name, class:"input-default", id:"tenant-name", placeholder:"例）Mall食堂"%>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">店舗ID</label>
          <span class="indispensable">※必須</span>
        </div>
        <%= f.text_field :tenant_ID, class:"input-default", id:"tenant-ID", placeholder:"例）abc12345"%>
      </div>

    <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">担当者氏名(全角)</label>
      <span class="indispensable">※必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :family_name, class:"input-name", id:"family-name", placeholder:"例) 山田" %>
      <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 陸太郎" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">担当者氏名カナ(全角)</label>
      <span class="indispensable">※必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :family_name_kana, class:"input-name", id:"family-name-kana", placeholder:"例) ヤマダ" %>
      <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) リクタロウ" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">テイクアウトのLast Order</label>
          <span class="indispensable">※必須</span>
        </div>
        <input type="time" name="last_order" placeholder="入力してください" class="last-order">
      </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

