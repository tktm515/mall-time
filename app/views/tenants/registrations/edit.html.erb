<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<div class='registration-main'> 
    <%= render "tenants/shared/error_messages", resource: resource %>
  <div class="img-upload">
    <div class="weight-bold-text">
      店舗画像
      <span class="indispensable">必須</span>
    </div>
    <div class="click-upload">
      <%= f.file_field :image, id:"item-image" %>
    </div>
  </div>
  
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">店舗名</label>
        <span class="indispensable">※必須</span>
      </div>
      <%= f.text_field :tenant_name, class:"input-default", id:"tenant-name", placeholder:"例）Mall食堂"%>
    </div>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">担当者氏名(全角)</label>
      <span class="indispensable">※必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :family_name, class:"input-name", id:"family-name", placeholder:"例) 山田" %>
      <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 陸太郎" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">担当者氏名カナ(全角)</label>
      <span class="indispensable">※必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :family_name_kana, class:"input-name", id:"family-name-kana", placeholder:"例) ヤマダ" %>
      <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) リクタロウ" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :新しいパスワード %><span class="indispensable">※必須</span> <em>（<%= @minimum_password_length %> 文字以上）</em><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :再確認パスワード %><span class="indispensable">※必須</span><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :現在のパスワード %><span class="indispensable">※必須</span><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="time-select">
    <div class='form-text-wrap'>
      <label class="form-text">Last Order</label>
      <span class="indispensable">※必須</span><br />
      <%= f.collection_select(:hour_id, Hour.all, :id, :name, {}, {class:"select-box", id:"hour"}) %>
      <%= f.collection_select(:minute_id, Minute.all, :id, :name, {}, {class:"select-box", id:"minute"}) %>
    </div>
  </div>
 

  <div class="tenant-actions">
    <%= f.submit "編集" %>
  </div>

</div>
<% end %>
